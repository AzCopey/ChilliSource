<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="[[PACKAGE]]" android:versionCode="[[VERSIONCODE]]" android:versionName="[[VERSIONNAME]]" android:installLocation="preferExternal" >

    <uses-feature android:name="android.hardware.touchscreen.multitouch" android:required="true" android:glEsVersion="0x00020000" />
    <uses-sdk android:minSdkVersion="[[MINSDKVERSION]]" android:targetSdkVersion="[[TARGETSDKVERSION]]"/>

    <!-- Chilli Source permissions -->
    <permission android:name="[[PACKAGE]].permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="com.android.vending.BILLING" />
	<uses-permission android:name="com.android.vending.CHECK_LICENSE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="[[PACKAGE]].permission.C2D_MESSAGE" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Manifest extra information -->
    [[MANIFESTEXTRA]]

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name"  android:allowBackup="false" android:debuggable="[[DEBUGGABLE]]">

        <!-- Chilli Source main -->
        <activity android:name="com.chillisource.core.CSActivity"
            android:screenOrientation="sensor"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"
            android:configChanges="keyboard|keyboardHidden|orientation|mcc|mnc|locale|touchscreen|navigation|fontScale|screenSize">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- Chilli Source video player -->
        <activity android:name="com.chillisource.video.VideoPlayerActivity" 
            android:screenOrientation = "landscape" 
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboard|keyboardHidden|orientation|mcc|mnc|locale|touchscreen|navigation|fontScale|screenSize" />

        <!-- Chilli Source local notifications -->
        <service android:name="com.chillisource.core.LocalNotificationService" />
        <receiver android:exported="false" android:name="com.chillisource.core.LocalNotificationReceiver">
            <intent-filter>
                <action android:name="com.chillisource.core.ALARM_NOTIFICATION_INTENT" />
            </intent-filter>
        </receiver>

        <!-- Google Play downloader -->
        <service android:name="com.chillisource.googleplay.GooglePlayDownloaderService" />
        <activity android:name="com.chillisource.googleplay.GooglePlayDownloaderActivity"
            	  android:windowSoftInputMode="stateHidden"
            	  android:screenOrientation = "landscape"
            	  android:configChanges="keyboard|keyboardHidden|orientation|mcc|mnc|locale|touchscreen|navigation|fontScale|screenSize" />

        <!-- Google Play remote notifications -->
        <meta-data android:name="GoogleProjectID" android:value="@string/GoogleProjectID" />
        <service android:name="com.chillisource.googleplay.CRemoteNotificationService" />
        <receiver android:name="com.chillisource.googleplay.GooglePlayAlarmReceiver" />
        <receiver android:name="com.chillisource.googleplay.GCMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="[[PACKAGE]]" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="[[PACKAGE]]" />
            </intent-filter>
        </receiver>

        <!-- Amazon iap -->
	    <receiver android:name = "com.amazon.inapp.purchasing.ResponseReceiver" >
			<intent-filter>
				<action android:name = "com.amazon.inapp.purchasing.NOTIFY" android:permission = "com.amazon.inapp.purchasing.Permission.NOTIFY" />
			</intent-filter>
		</receiver>

        <!-- Application extra information -->
        [[APPLICATIONEXTRA]]

    </application>

</manifest>